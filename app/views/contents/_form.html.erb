<%= form_for content, :html => {:class => 'bp'} do |f| -%>
  <%= f.label :slug, "Slug" %>
  <%= f.text_field :slug %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :body, "Body" %>
  <%= f.text_field :body %>

  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end -%>